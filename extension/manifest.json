{
	"manifest_version": 2,

	"name": "VK History Backup",
	"description": "Бэкап сообщений ВКонтакте",
	"version": "1.0",

	"oauth2": {
		"client_id": "151577150412-e2nuefi62vgk6tjg686l1n5lnage8p00.apps.googleusercontent.com",
		"scopes": [
		  "https://www.googleapis.com/auth/drive"
		]
	},

	"icons": { "128": "ico/icon128.png" },

	"permissions": [
		"storage",
		"background",
		"tabs",
		"identity",
		"https://ssl.gstatic.com/",
		"https://www.googleapis.com/",
		"https://accounts.google.com/",
		"https://api.vk.com/"
	],

	"background": {
		"scripts": ["js/background.min.js"],
		"persistent": true
	},

	"browser_action": {
		"default_icon": "ico/icon38.png",
		"default_popup": "popup.html"
	},

	"options_page": "options.html"
}
